<Window x:Class="RPdaraye.info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPdaraye"
        mc:Ignorable="d"
        Title="info" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Ошибка входа" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="4" TextAlignment="Center" Text="Пользователя не существует" FontSize="16"/>
        <Button x:Name="poh" Content="Неважно" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Click="poh_Click"/>
        <Button x:Name="create" Grid.Column="3" Content="Cоздать" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Click="create_Click"/>

    </Grid>
</Window>
